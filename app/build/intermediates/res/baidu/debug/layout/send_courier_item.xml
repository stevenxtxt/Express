<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:gravity="center_vertical">

    <com.example.express.view.RoundImageView
        android:id="@+id/riv_courier_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/user_photo"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_courier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王大锤"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_courier_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申通快递"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:textColor="#fd6c03"/>
        <TextView
            android:id="@+id/tv_courier_scope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收派范围：宋都奥体名座..."
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.00+"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_launcher"
            android:gravity="center_vertical"
            android:textColor="#666666"/>
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4天"
            android:drawableLeft="@drawable/ic_launcher"
            android:gravity="center_vertical"
            android:textColor="#666666"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/xutework/AndroidStudioProjects/Express2015-4-24/app/src/main/res/layout/send_courier_item.xml -->