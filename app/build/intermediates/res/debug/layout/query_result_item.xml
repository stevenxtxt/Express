<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/main_bg">

    <LinearLayout
        android:id="@+id/ll_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015.07.27"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/tv_result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:03"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_result_divider"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher"
        android:layout_toRightOf="@id/ll_result_time"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/tv_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_result_divider"
        android:text="快件已到达南京公司，等待派送中"
        android:layout_centerVertical="true"
        android:textSize="18sp"/>

</RelativeLayout><!-- From: file:/C:/Users/xutework/AndroidStudioProjects/Express2015-4-24/app/src/main/res/layout/query_result_item.xml -->