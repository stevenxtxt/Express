<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <RelativeLayout
        style="@style/title_relativelayout">

        <RelativeLayout
            android:id="@+id/btn_title_btn_back_layout"
            style="@style/title_btn_back_layout">

            <ImageView
                android:id="@+id/back"
                style="@style/title_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title_name"
            style="@style/title_name"
            android:ellipsize="end"
            android:maxEms="11"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            style="@style/more_text"
            android:layout_centerVertical="true"

            android:text="账号" />

        <ImageView
            android:id="@+id/iv_zuo"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/zuo"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_username"
            style="@style/more_text"
            android:layout_toLeftOf="@id/iv_zuo"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/rl_true_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            style="@style/more_text"
            android:layout_centerVertical="true"

            android:text="真实姓名" />

        <ImageView
            android:id="@+id/iv_zuo1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/zuo" />

        <TextView
            android:id="@+id/tv_true_name"
            style="@style/more_text"
            android:layout_toLeftOf="@id/iv_zuo1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="未编辑"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <RelativeLayout
        android:id="@+id/rl_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            style="@style/more_text"
            android:layout_centerVertical="true"

            android:text="性别" />

        <ImageView
            android:id="@+id/iv_zuo2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/zuo" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/more_text"
            android:layout_toLeftOf="@id/iv_zuo2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="保密"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            style="@style/more_text"
            android:layout_centerVertical="true"

            android:text="手机号" />

        <ImageView
            android:id="@+id/iv_zuo3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/zuo" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/more_text"
            android:layout_toLeftOf="@id/iv_zuo3"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            style="@style/more_text"
            android:layout_centerVertical="true"

            android:text="所在地" />

        <ImageView
            android:id="@+id/iv_zuo4"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/zuo" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/more_text"
            android:layout_toLeftOf="@id/iv_zuo4"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="未编辑"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d0d0d0" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_round_bg2"
        android:text="退出"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:padding="10dp"/>
</LinearLayout><!-- From: file:/C:/Users/xutework/AndroidStudioProjects/Express2015-4-24/app/src/main/res/layout/personal_info.xml -->